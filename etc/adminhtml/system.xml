<?xml version="1.0" ?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="hibrido" translate="label" sortOrder="10" class="hibrido-tab">
            <label>Hibrido</label>
        </tab>
        <section id="metatags" translate="label" sortOrder="150"
                 showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Meta Tags</label>
            <tab>hibrido</tab>
            <resource>Hibrido_MetaTags::metatags_config</resource>
            <group id="general" translate="label" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Active module</label>
                <field id="active" translate="label comment" type="select"
                       sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
            </group>
        </section>
    </system>
</config>
